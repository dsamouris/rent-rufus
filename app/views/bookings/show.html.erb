<div class="container">
  <h1 class="text-center">You just booked <%= @booking.dog.name  %></h1>
</div>


<div class="container">

  <div class="row ">

    <div class="card col-6 offset-3 text-center pt-2">
      <p>
        <strong>Booking Date</strong>
        <%= "#{@booking.start_date} - #{@booking.end_date}" %>
      </p>

      <p>
      <!-- do we want to put a hyperlink here to go back to the dog show page? -->
        <strong>Have fun with</strong>
        <%= @booking.dog.name %>
      </p>
      <div class="d-flex justify-content-center mb-3">
        <% if policy(@booking).destroy? %>
          <%= link_to 'Cancel this booking', booking_path(@booking), class: "btn btn-secondary ", method: :delete, data: { confirm: 'Are you sure you want to cancel your fun date with doggo?' } %>
        <% end %>
        <%= link_to 'Back to Doggos', dogs_path, class: "btn btn-danger ms-1" %>
      </div>
    </div>
  </div>
</div>

