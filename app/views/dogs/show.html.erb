
<p id="notice"><%= notice %></p>

<div class="card-dog d-flex justify-content-center">
  <img src="/assets/doggo_card1.jpg" alt="Doggo Card">
  <div class="card-product-infos" >
    <h2><%= @dog.name %></h2>
    <p><strong>Age: </strong><%= @dog.age %> </p>
    <p><strong>Size: </strong><%= @dog.size %> </p>
    <p><strong>Breed: </strong><%= @dog.breed %> </p>
    <p><strong>Activity: </strong><%= @dog.activity %> </p>
    <p><strong>Description: </strong><%= @dog.description %> </p>
    <p><strong>Owner: </strong><%= @dog.user.email %> </p>
  </div>
</div>

<% if user_signed_in? %>
  <%= link_to 'Book this Doggo', new_dog_booking_path(@dog), class: "btn btn-primary" %>
  <%= link_to 'Edit your Doggo', edit_dog_path(@dog), class: "btn btn-ghost" %>
<% end %>
<%= link_to 'Back to Doggos', dogs_path, class: "btn btn-gradient" %>
